/* teacher_stats.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 0 0 30rpx 0;
  box-sizing: border-box;
  width: 100%;
}

/* 公共样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

.separator {
  margin: 0 10rpx;
  color: #ddd;
}

/* 数据概览区域 */
.overview-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stats-cards {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.stats-card {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  position: relative;
}

.stats-card:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 图表公共样式 */
.chart-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.chart-container {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.ec-canvas {
  width: 100%;
  height: 100%;
}

/* 筛选相关样式 */
.filter-group {
  display: flex;
  align-items: center;
}

.time-filter {
  display: flex;
}

.filter-item {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.filter-item.active {
  color: #0052d9;
  background-color: #e6f7ff;
}

.more-filters {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.more-filters text {
  margin-left: 8rpx;
}

/* 申请趋势区域 */
.trend-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 趋势表格样式 */
.trend-table-container {
  width: 100%;
  margin-top: 20rpx;
}

.table-header, .table-row {
  display: flex;
  width: 100%;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-header {
  font-weight: 500;
  color: #333;
  border-bottom: 2rpx solid #eee;
}

.table-cell {
  flex: 1;
}

.date-cell {
  flex: 0.6;
}

.count-cell {
  flex: 0.4;
  text-align: center;
}

.bar-cell {
  flex: 2;
  position: relative;
}

.trend-bar {
  height: 16rpx;
  background: #0052d9;
  border-radius: 8rpx;
  min-width: 8rpx;
}

/* 热度排行样式 */
.hot-jobs-container {
  margin-top: 20rpx;
}

.hot-jobs-container .table-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.job-rank {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #0052d9;
  color: #fff;
  border-radius: 50%;
  margin-right: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.hot-jobs-container .table-row:nth-child(1) .job-rank {
  background: #ff4d4f;
}

.hot-jobs-container .table-row:nth-child(2) .job-rank {
  background: #faad14;
}

.hot-jobs-container .table-row:nth-child(3) .job-rank {
  background: #52c41a;
}

.job-info {
  flex: 1;
}

.job-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.job-count {
  font-size: 22rpx;
  color: #999;
}

.job-bar-container {
  flex: 2;
  display: flex;
  align-items: center;
}

.job-bar {
  height: 16rpx;
  background: #0052d9;
  border-radius: 8rpx;
  margin-right: 16rpx;
  min-width: 8rpx;
}

.job-percent {
  font-size: 22rpx;
  color: #666;
  width: 60rpx;
}

/* 状态分布样式 */
.status-distribution {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.status-item {
  text-align: center;
}

.status-progress {
  margin-bottom: 12rpx;
}

.status-info {
  text-align: center;
}

.status-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.status-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-percent {
  font-size: 22rpx;
  color: #999;
}

/* 新增统计模块公共样式 */
.stats-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-card-list {
  margin-top: 16rpx;
}

/* 校友卡片样式 */
.alumni-card, .student-card {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.alumni-card:last-child, .student-card:last-child {
  border-bottom: none;
}

.alumni-info, .student-info {
  display: flex;
  align-items: center;
  flex: 2;
}

.alumni-details, .student-details {
  margin-left: 20rpx;
  flex: 1;
}

.alumni-name, .student-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.alumni-company {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.alumni-department {
  font-size: 22rpx;
  color: #999;
}

.alumni-pending {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.pending-count {
  color: #ff4d4f;
  font-weight: 500;
}

.alumni-stats, .student-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  flex: 1;
}

.alumni-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0052d9;
}

.alumni-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.thank-btn, .contact-btn, .invite-btn {
  margin-top: 16rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: #0052d9;
  background: rgba(0, 82, 217, 0.1);
  border-radius: 4rpx;
  text-align: center;
}

.contact-btn {
  color: #fa8c16;
  background: rgba(250, 140, 22, 0.1);
}

/* 校友活动时间 */
.alumni-activity {
  text-align: right;
  margin-bottom: 12rpx;
}

.activity-label {
  font-size: 22rpx;
  color: #999;
}

.activity-time {
  font-size: 24rpx;
  color: #666;
}

/* 学生卡片样式 */
.student-major {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.student-rate {
  font-size: 24rpx;
  color: #666;
}

.success-rate {
  color: #36b37e;
  font-weight: 500;
}

.student-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.application-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 12rpx;
}

.application-info:last-child {
  margin-bottom: 0;
}

.application-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #0052d9;
}

.success-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #36b37e;
}

.application-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.invite-btn {
  color: #0052d9;
  background: rgba(0, 82, 217, 0.1);
}

/* 最近申请区域 */
.recent-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.view-all {
  font-size: 26rpx;
  color: #0052d9;
}

.applications-list {
  margin-top: 10rpx;
}

.application-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.application-item:last-child {
  border-bottom: none;
}

.application-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.student-detail {
  margin-left: 16rpx;
}

.student-class {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.application-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.application-status.pending {
  color: #fa8c16;
  background-color: #fff7e6;
}

.application-status.approved {
  color: #52c41a;
  background-color: #f6ffed;
}

.application-status.rejected {
  color: #ff4d4f;
  background-color: #fff1f0;
}

.application-job {
  margin-bottom: 16rpx;
}

.application-job .job-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.application-job .job-company {
  font-size: 24rpx;
  color: #999;
}

.application-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.apply-time {
  font-size: 24rpx;
  color: #999;
  width: 566rpx; 
  display: block; 
  box-sizing: border-box;
}

/* 筛选弹出层样式 */
.filter-popup {
  padding: 30rpx;
  max-height: 70vh;
}

.filter-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.filter-group {
  margin-bottom: 30rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-option.active {
  background: #e6f7ff;
  color: #0052d9;
  border: 1rpx solid #0052d9;
}

.filter-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  width: 100%;
} 