<view class="container">
  <!-- 搜索框 -->
  <view class="search-box">
    <input 
      type="text" 
      placeholder="搜索职位" 
      value="{{keyword}}"
      bindinput="onSearch"
    />
  </view>

  <!-- 职位列表 -->
  <view class="job-list">
    <block wx:if="{{jobList.length > 0}}">
      <view 
        class="job-item" 
        wx:for="{{jobList}}" 
        wx:key="id"
        bindtap="goToDetail"
        data-id="{{item.id}}"
      >
        <view class="job-title">{{item.title}}</view>
        <view class="job-salary">{{item.salary}}</view>
        <view class="job-company">{{item.company}}</view>
        <view class="job-info">
          <text class="location">{{item.location}}</text>
          <text class="publisher">{{item.publisher}}</text>
        </view>
        <view class="job-tags">
          <text class="tag" wx:for="{{item.tags}}" wx:key="*this">{{item}}</text>
        </view>
      </view>
    </block>
    
    <!-- 空状态 -->
    <view class="empty" wx:if="{{jobList.length === 0 && !loading}}">
      <text>暂无职位</text>
    </view>

    <!-- 加载状态 -->
    <view class="loading" wx:if="{{loading}}">
      <text>加载中...</text>
    </view>

    <!-- 加载完成 -->
    <view class="no-more" wx:if="{{!hasMore && jobList.length > 0}}">
      <text>没有更多了</text>
    </view>
  </view>
</view> 