.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.search-box {
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-box input {
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.job-list {
  padding-bottom: 40rpx;
}

.job-item {
  background: #fff;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.job-salary {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.job-company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.empty, .loading, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
} 