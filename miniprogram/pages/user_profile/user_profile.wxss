/* user_profile.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 0 0 60rpx 0;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info-section {
  background: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #0052d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.user-info {
  flex: 1;
}

.username-container {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.verified-badge {
  display: flex;
  align-items: center;
  color: #0052d9;
  font-size: 24rpx;
}

.verified-badge text {
  margin-left: 4rpx;
}

.user-role {
  font-size: 28rpx;
  color: #666;
}

/* 统计数据区域 */
.stats-section {
  display: flex;
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 0;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

.stats-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 28rpx;
  color: #999;
}

/* 菜单区域 */
.menu-section {
  margin-top: 20rpx;
}

.menu-group {
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
}

/* 底部区域 */
.footer-section {
  margin-top: 60rpx;
  text-align: center;
}

.about-link {
  font-size: 28rpx;
  color: #0052d9;
  margin-bottom: 16rpx;
}

.version-info {
  font-size: 24rpx;
  color: #999;
} 