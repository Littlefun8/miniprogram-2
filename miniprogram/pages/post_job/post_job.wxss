/* post_job.wxss */
page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.container {
  padding: 0;
  box-sizing: border-box;
}

.form-container {
  padding: 20rpx;
}

/* 表单块样式 */
.form-block {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.form-block-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 标签选择器样式 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s ease;
}

.tag.selected {
  background: #e6f7ff;
  color: #0052d9;
  border: 1rpx solid #0052d9;
}

.tag-counter {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.counter {
  color: #0052d9;
  font-weight: 500;
  margin: 0 3rpx;
}

/* 信息框样式 */
.info-box {
  background-color: #f9f9f9;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 发布人信息样式 */
.publisher-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

/* 自定义下拉选择器样式 */
.custom-select {
  position: relative;
  width: 200rpx;
  z-index: 10;
}

.custom-select.disabled {
  opacity: 0.6;
}

.select-value {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.select-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 0 0 8rpx 8rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  display: none;
  z-index: 20;
}

.select-dropdown.open {
  display: block;
}

.select-option {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-option:last-child {
  border-bottom: none;
}

.select-option.active {
  color: #0052d9;
  background-color: #f5f7fa;
}

/* 禁用块样式 */
.disabled-block {
  opacity: 0.7;
}

.status-tag {
  margin-left: 20rpx;
  font-size: 22rpx;
  font-weight: normal;
  color: #999;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 提交按钮样式 */
.submit-btn-container {
  padding: 40rpx 30rpx;
}

.submit-btn {
  border-radius: 44rpx;
  font-size: 32rpx;
}

/* 上传二维码样式 */
.upload-qrcode {
  margin-top: 30rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.upload-container {
  width: 240rpx;
  height: 240rpx;
}

.upload-preview {
  width: 100%;
  height: 100%;
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.upload-btn {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.upload-btn text {
  margin-top: 16rpx;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cancel-btn {
  flex: 1;
  margin-right: 20rpx;
}

.submit-btn {
  flex: 1;
}