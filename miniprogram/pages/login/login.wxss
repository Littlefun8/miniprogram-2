/* login.wxss */
.container {
  min-height: 100vh;
  background: #FFFFFF;
  padding: 48rpx;
}

/* 头部样式 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
}

/* 表单样式 */
.login-form {
  padding: 0 32rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.avatar {
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
}

.nickname-wrapper {
  margin-bottom: 48rpx;
}

.nickname-input {
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 24rpx;
}

/* 用户类型选择 */
.user-type {
  margin-bottom: 48rpx;
}

.type-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 24rpx;
}

.type-options {
  display: flex;
  gap: 48rpx;
}

/* 登录按钮 */
.login-button {
  margin-bottom: 32rpx;
}

/* 用户协议 */
.agreement {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

.link {
  color: #0052D9;
  display: inline;
} 