<!--profile.wxml-->
<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info">
    <view class="avatar-wrapper">
      <t-avatar image="{{userInfo.avatarUrl || '/assets/images/default-avatar.png'}}" size="large" />
    </view>
    <view class="user-name">{{userInfo.nickName || '未登录'}}</view>
  </view>

  <!-- 功能列表 -->
  <t-cell-group>
    <t-cell title="我的发布" hover arrow bind:tap="onMyPostsTap" />
    <t-cell title="我的申请" hover arrow bind:tap="onMyApplicationsTap" />
    <t-cell title="收藏的职位" hover arrow bind:tap="onFavoritesTap" />
    <t-cell title="设置" hover arrow bind:tap="onSettingsTap" />
  </t-cell-group>
</view> 