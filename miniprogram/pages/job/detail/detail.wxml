<!--detail.wxml-->
<view class="container">
  <!-- 职位基本信息 -->
  <view class="job-header">
    <view class="job-title">{{jobDetail.title}}</view>
    <view class="job-salary">{{jobDetail.salary}}</view>
    
    <view class="job-tags">
      <t-tag wx:for="{{jobDetail.tags}}" wx:key="*this" variant="light" theme="primary" size="small">{{item}}</t-tag>
    </view>
    
    <view class="job-meta">
      <view class="meta-item">
        <t-icon name="location" size="32rpx" />
        <text>{{jobDetail.location}}</text>
      </view>
      <view class="meta-item">
        <t-icon name="time" size="32rpx" />
        <text>{{jobDetail.publishTime}}</text>
      </view>
    </view>
  </view>

  <!-- 公司信息 -->
  <view class="company-card">
    <view class="company-header">
      <image class="company-logo" src="{{jobDetail.companyLogo}}" mode="aspectFill" />
      <view class="company-info">
        <view class="company-name">{{jobDetail.company}}</view>
        <view class="company-desc">{{jobDetail.companyDesc}}</view>
      </view>
    </view>
  </view>

  <!-- 职位描述 -->
  <view class="section">
    <view class="section-title">职位描述</view>
    <view class="section-content">{{jobDetail.description}}</view>
  </view>

  <!-- 任职要求 -->
  <view class="section">
    <view class="section-title">任职要求</view>
    <view class="section-content">{{jobDetail.requirements}}</view>
  </view>

  <!-- 工作地点 -->
  <view class="section">
    <view class="section-title">工作地点</view>
    <view class="section-content">
      <view class="location-detail">{{jobDetail.locationDetail}}</view>
      <map 
        class="location-map" 
        latitude="{{jobDetail.latitude}}" 
        longitude="{{jobDetail.longitude}}"
        markers="{{markers}}"
        scale="16"
      ></map>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="action-buttons">
      <t-button 
        theme="primary" 
        size="large" 
        block 
        bindtap="onApplyTap"
        loading="{{applying}}"
      >立即申请</t-button>
    </view>
  </view>
</view> 