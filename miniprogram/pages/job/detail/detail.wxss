/* detail.wxss */
.container {
  padding-bottom: 120rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 职位头部信息 */
.job-header {
  background: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.job-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.job-salary {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF4D4F;
  margin-bottom: 24rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.job-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666666;
  font-size: 28rpx;
}

/* 公司信息卡片 */
.company-card {
  background: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.company-header {
  display: flex;
  gap: 24rpx;
}

.company-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.company-desc {
  font-size: 28rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 内容区块 */
.section {
  background: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #0052D9;
  border-radius: 4rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 地图样式 */
.location-map {
  width: 100%;
  height: 400rpx;
  margin-top: 24rpx;
  border-radius: 12rpx;
}

.location-detail {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-buttons {
  display: flex;
  gap: 24rpx;
} 