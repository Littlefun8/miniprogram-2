/* job_list.wxss */

page {
  background-color: #f5f5f5;
}

.container {
  padding: 0 0 30rpx 0;
  box-sizing: border-box;
}

/* 搜索栏样式 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-bar .custom-search {
  flex: 1;
}

.add-btn {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  background-color: #0052d9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  margin-top: 120rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  align-items: center;
  justify-content: space-between;
}

.filter-options {
  display: flex;
  align-items: center;
}

.filter-option {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  position: relative;
  margin-right: 10rpx;
}

.filter-option.active {
  color: #0052d9;
  font-weight: 500;
}

.filter-option.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  background-color: #0052d9;
  border-radius: 4rpx;
}

.filter-actions {
  display: flex;
  align-items: center;
}

.filter-dropdown {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 0 10rpx;
  margin-left: 30rpx;
}

/* 职位列表样式 */
.job-list {
  padding: 0 24rpx;
}

.job-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.job-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.job-salary {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.job-company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.publisher-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 60rpx;
}

.publisher-info,
.reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.publisher-name,
.reviewer-name {
  font-size: 24rpx;
  color: #666;
  margin: 0 12rpx;
}

.detail-btn {
  position: absolute;
  bottom: 150rpx;
  right: -480rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
}

.loading-text {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 筛选弹出层样式 */
.filter-popup {
  padding: 40rpx;
  max-height: 60vh;
}

.filter-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.filter-popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.filter-popup-content {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-popup-item {
  padding: 20rpx 30rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-popup-item.active {
  background: #e6f7ff;
  color: #0052d9;
  border: 1rpx solid #0052d9;
} 